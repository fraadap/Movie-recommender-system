# API Gateway Configuration
VUE_APP_API_GATEWAY_URL=https://your-api-gateway-id.execute-api.eu-west-1.amazonaws.com/prod

# TMDB API Key (for fallback poster images)
VUE_APP_TMDB_API_KEY=your_tmdb_api_key

# Authentication Configuration
VUE_APP_AUTH_ENABLED=true
VUE_APP_TOKEN_EXPIRY=86400 # 24 hours in seconds

# Features Configuration
VUE_APP_ENABLE_RECOMMENDATIONS=true
VUE_APP_ENABLE_SEARCH=true
VUE_APP_ENABLE_FAVORITES=true
VUE_APP_ENABLE_WATCHED=true

# DynamoDB Table Names (for development with local DynamoDB)
VUE_APP_USERS_TABLE=MovieRecommender_Users
VUE_APP_FAVORITES_TABLE=MovieRecommender_Favorites
VUE_APP_WATCHED_TABLE=MovieRecommender_Watched
VUE_APP_PREFERENCES_TABLE=MovieRecommender_Preferences
VUE_APP_ACTIVITY_TABLE=MovieRecommender_Activity
VUE_APP_MOVIES_TABLE=Movies

# Endpoints Configuration (for local development override)
# VUE_APP_API_SEARCH_ENDPOINT=/search
# VUE_APP_API_RECOMMEND_ENDPOINT=/recommend
# VUE_APP_API_CONTENT_ENDPOINT=/content
# VUE_APP_API_COLLABORATIVE_ENDPOINT=/collaborative

# IMPORTANT: Replace the above values with your actual API Gateway URL and TMDB API key
# For production, use a .env.production file with your production values 